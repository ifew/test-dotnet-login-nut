							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.status).to.eql('OK');",
							"    pm.expect(jsonData.results.id).to.eql(1);",
							"    pm.expect(jsonData.results.username).to.eql('ploy');",
